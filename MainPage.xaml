<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViagemCusto.MainPage"
             Title="">

    <ScrollView>
        <StackLayout>
            <Label Text="Origem:"/>
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino:"/>
            <Entry BindingContext="destino" x:Name="txt_destino"/>

            <Label Text="Distancia:"/>
            <Entry BindingContext="distancia" x:Name="txt_distancia"/>

            <Label Text="Rendimento:"/>
            <Entry BindingContext="rendimento" x:Name="txt_rendimento"/>

            <Label Text="Preço do Combustível:"/>
            <Entry BindingContext="valor_comb" x:Name="txt_combustivel"/>

            <Button Margin="5" x:Name="btn_createpedagio" Text="Adicionar pedagio" Clicked="btn_createpedagio_Clicked" />
            <Button Margin="5" x:Name="btn_listpedagio" Text="Lista de pedagios" Clicked="btn_listpedagio_Clicked"/>
            <Button Margin="5" x:Name="btn_calcular" Text="Calcular" Clicked="btn_calcular_Clicked"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
